#!/usr/bin/env ruby

## dev-copy
#
#  Author: Andrew Robert McBurney <andrewrobertmcburney@gmail.com>
#  Description: Copy a directory from my workstation to my local machine.
#  Usage:
#
#    dev-copy </remote/file/path> </local/file/path>

require_relative "shared/constants"
require_relative "shared/errors"

def scp_workstation!(remote, local)
  exec("scp -r -i #{Const::EC2::PEM} #{Const::EC2::WORKSTATION}:#{remote} #{local}")
end

Error.not_exact_arguments(2) if ARGV.size != 2

scp_workstation!(*ARGV)
